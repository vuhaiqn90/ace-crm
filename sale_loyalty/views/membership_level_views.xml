<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_membership_level_tree" model="ir.ui.view">
        <field name="name">membership.level.form</field>
        <field name="model">membership.level</field>
        <field name="arch" type="xml">
            <tree string="Membership Level" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" required="1"/>
                <field name="code" required="1"/>
                <field name="point" required="1"/>
                <field name="referring_percent"/>
            </tree>
        </field>
    </record>

    <record id="action_membership_level_form" model="ir.actions.act_window">
        <field name="name">Membership Level</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">membership.level</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a Membership Level.
            </p>
        </field>
    </record>

    <menuitem parent="sale.menu_sale_config" action="action_membership_level_form" id="menu_membership_level" sequence="30"/>
</odoo>