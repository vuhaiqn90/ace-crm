<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_return_wizard_form_view" model="ir.ui.view">
        <field name="name">sale.return.wizard.form</field>
        <field name="model">sale.return.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_print" string="Export" type="object" class="btn-primary"/>
                    <button special="cancel" string="Close" type="object" class="oe_link" />
                </header>
                <group>
                    <field name="reason" required="1"/>
                </group>
                <notebook>
                    <page string="Detail">
                        <field name="line_ids">
                            <tree>
                                <field name="product_id" required="1"/>
                                <field name="qty" sum="Quantity"/>
                                <field name="uom_id"/>
                                <field name="price_unit"/>
                                <field name="total" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_sale_return_wizard" model="ir.actions.act_window">
		<field name="name">Return</field>
		<field name="res_model">sale.return.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="sale_return_wizard_form_view"/>
		<field name="target">new</field>
	</record>
</odoo>