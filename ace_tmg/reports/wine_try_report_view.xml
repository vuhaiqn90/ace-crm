<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ace_wine_try_report_view" model="ir.ui.view">
		<field name="name">Báo cáo rượu thử</field>
		<field name="model">ace.wine.try.report</field>
		<field name="arch" type="xml">
            <form>
                <header>
                    <button name="get_report" string="Xem báo cáo" type="object" class="btn-primary"/>
                    <button name="export_excel" string="Excel" type="object" class="btn-primary"/>
                </header>
                <group>
                    <group>
                        <field name="partner_id"
                               options="{'no_quick_create': True, 'no_create': True,'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="user_ids" widget="many2many_tags"
                               options="{'no_quick_create': True, 'no_create': True,'no_create_edit': True}"/>
                        <field name="team_ids" widget="many2many_tags"
                               options="{'no_quick_create': True, 'no_create': True,'no_create_edit': True}"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                    </group>
                    <group>
                        <field name="date_to" required="1"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="total_revenue" readonly="1"/>
                        <field name="rate" readonly="1"/>
                    </group>
                    <group>
                        <field name="over_amount" readonly="1"/>
                        <field name="fine" readonly="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Chi tiết Rượu thử">
                        <field name="line_ids" readonly="1">
                            <tree>
                                <field name="order_id" invisible="1"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="user_id" invisible="0"/>
                                <field name="product_id" invisible="1"/>
                                <field name="product_code"/>
                                <field name="product_name"/>
                                <field name="uom_id"/>
                                <field name="qty" sum="Total"/>
                                <field name="price_unit"/>
                                <field name="amount" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Chi tiết theo NVKD">
                        <field name="emp_line_ids" readonly="1">
                            <tree>
                                <field name="user_id"/>
                                <field name="qty" sum="Total"/>
                                <field name="amount" sum="Total"/>
                                <field name="total" sum="Total"/>
                                <field name="rate" sum="Rate"/>
                                <field name="over_amount" sum="Over"/>
                                <field name="fine" sum="Fine"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
		</field>
	</record>

    <record id="action_ace_wine_try_report" model="ir.actions.act_window">
		<field name="name">Báo cáo rượu thử</field>
		<field name="res_model">ace.wine.try.report</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="ace_wine_try_report_view"/>
		<field name="target">inline</field>
	</record>
</odoo>