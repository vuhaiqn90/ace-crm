<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tmg_commission_form_view" model="ir.ui.view">
		<field name="name">Hoa hồng</field>
		<field name="model">tmg.commission</field>
		<field name="arch" type="xml">
            <form>
                <header>
                    <button name="compute_commission" string="Compute" type="object" class="btn-primary"/>
                </header>
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="user_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="date_to" required="1"/>
                        <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="total"/>
                        <field name="total_discount"/>
                        <field name="total_returned"/>
                        <field name="net_revenue"/>
                    </group>
                    <group>
                        <field name="total_cost"/>
                        <field name="gross_profit"/>
                        <field name="commission_revenue"/>
                        <field name="commission"/>
                    </group>
                </group>
                <notebook>
                    <page string="Detail">
                        <field name="line_ids" nolabel="1" readonly="1">
                            <tree default_order="date, invoice_id">
                                <field name="date"/>
                                <field name="invoice_id" invisible="1"/>
                                <field name="name"/>
                                <field name="total" sum="Total"/>
                                <field name="total_discount" sum="Total Discount"/>
                                <field name="total_returned" sum="Total Returned"/>
                                <field name="net_revenue" sum="Net Revenue"/>
                                <field name="commission_revenue" sum="Commission Revenue"/>
                                <field name="total_cost" sum="Total Cost"/>
                                <field name="gross_profit" sum="Gross Profit"/>
                                <field name="gross_profit_per" sum="Gross Profit Percent"/>
                                <field name="net_revenue_accrued" sum="Net Revenue Accrued"/>
                                <field name="discount" sum="Discount"/>
                                <field name="commission_revenue_per" sum="Commission Revenue Percent"/>
                                <field name="commission_per" sum="Commission Percent"/>
                                <field name="receivable" sum="Receivable"/>
                                <field name="commission" sum="Commission"/>
                                <field name="profit_after_sale" sum="Profit After Sale"/>
                                <field name="profit_after_sale_per" sum="Profit After Sale Percent"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
		</field>
	</record>

    <record id="action_tmg_commission" model="ir.actions.act_window">
        <field name="name">Hoa hồng (TMG)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tmg.commission</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>