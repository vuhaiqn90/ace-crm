<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ace_view_order_form" model="ir.ui.view">
        <field name="name">ace.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="telesales" domain="[('job_position', '=', 'tels')]"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'search_default_customer':1, 'show_vat': False}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                <attribute name="context">{'default_type':'invoice', 'show_address': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="context">{'default_type':'delivery', 'show_address': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('parent.promotion_ids', '!=', []), ('parent.ace_applied_coupon_ids', '!=', [])]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="ace_view_quotation_tree" model="ir.ui.view">
        <field name="name">ace.sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="telesales"/>
            </xpath>
        </field>
    </record>

    <record id="ace_view_order_tree" model="ir.ui.view">
        <field name="name">ace.sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="telesales"/>
            </xpath>
        </field>
    </record>
</odoo>