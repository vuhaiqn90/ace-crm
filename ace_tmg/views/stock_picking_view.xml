<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ace_view_picking_form" model="ir.ui.view">
        <field name="name">ace.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in', ['draft', 'waiting', 'confirmed'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="readonly">0</attribute>
                <attribute name="attrs">{'readonly': [('state', 'not in', ['draft', 'waiting', 'confirmed'])], 'invisible': [('picking_type_code', '=', 'incoming')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute name="readonly">0</attribute>
                <attribute name="attrs">{'readonly': [('state', 'not in', ['draft', 'waiting', 'confirmed'])], 'invisible': [('picking_type_code', '=', 'outgoing')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="wine_to_try" attrs="{'invisible': [('wine_to_try', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="tmg_view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="name">tmg.delivery.stock.picking_withcarrier.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="before">
                <field name="receiver_deliver" attrs="{'invisible': [('picking_type_code', 'not in', ['incoming', 'outgoing'])]}"/>
                <field name="mobile" attrs="{'invisible': [('picking_type_code', 'not in', ['incoming', 'outgoing'])]}"/>
                <field name="address" attrs="{'invisible': [('picking_type_code', 'not in', ['incoming', 'outgoing'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>