<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ace_view_partner_form" model="ir.ui.view">
        <field name="name">ace.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="agent_level"/>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="tmg_membership_id"/>
            </xpath>
        </field>
    </record>

    <record id="ace_view_category_property_form" model="ir.ui.view">
        <field name="name">ace.partner.over.credit.limit.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_credit_limit.view_category_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='over_credit']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>