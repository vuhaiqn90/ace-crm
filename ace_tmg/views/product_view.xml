        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="tmg_product_template_tree_view" model="ir.ui.view">
        <field name="name">tmg.product.template.product.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="tmg_product_variant_easy_edit_view_inherit" model="ir.ui.view">
        <field name="name">tmg.product.product.product.view.form.easy.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock_account.product_variant_easy_edit_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
            <xpath expr="//div[@name='standard_price_div']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="tmg_view_template_property_form" model="ir.ui.view">
        <field name="name">tmg.product.template.stock.property.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_account.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
            <xpath expr="//div[@name='update_cost_price']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
        </field>
    </record>
</odoo>