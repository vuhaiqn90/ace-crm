<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sms_brand_view_form" model="ir.ui.view">
            <field name="name">sms.brand.view.form</field>
            <field name="model">sms.brand</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                        </group>
                        <group>
                            <field name="gateway_id" widget="selection"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="sms_brand_view_tree" model="ir.ui.view">
            <field name="name">sms.brand.view.tree</field>
            <field name="model">sms.brand</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="gateway_id"/>
                </tree>
            </field>
        </record>

        <record id="sms_brand_action" model="ir.actions.act_window">
            <field name="name">sms.brand.action</field>
            <field name="res_model">sms.brand</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Add SMS Brand</p>
            </field>
        </record>


    </data>
</odoo>