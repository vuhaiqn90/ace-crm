<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sms_marketing_view_form" model="ir.ui.view">
        <field name="name">sms.marketing.view.form</field>
        <field name="model">sms.marketing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="send_sms" states="draft" string="Send SMS" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="brand_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="group_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="sms_content" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="partners" string="Partners">
                            <field name="partner_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree>
                                    <field name="ref"/>
                                    <field name="name"/>
                                    <field name="mobile"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        <page name="messages" string="Messages">
                            <field name="sms_message_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sms_marketing_view_tree" model="ir.ui.view">
        <field name="name">sms.marketing.view.tree</field>
        <field name="model">sms.marketing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="brand_id"/>
                <field name="sms_content"/>
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="sms_marketing_action" model="ir.actions.act_window">
        <field name="name">SMS Marketing</field>
        <field name="res_model">sms.marketing</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Add SMS Marketing</p>
        </field>
    </record>
</odoo>