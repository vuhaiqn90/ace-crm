<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sms_gateway_view_form" model="ir.ui.view">
            <field name="name">sms.gateway.view.form</field>
            <field name="model">sms.gateway</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="connect_sms" string="Test kết nối" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="base_url" required="1"/>
                            </group>
                            <group>
                                <field name="api_key" required="1"/>
                                <field name="secret_key" required="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="brand_ids"/>
                        </group>
                    </sheet>


                </form>
            </field>
        </record>

        <record id="sms_gateway_view_tree" model="ir.ui.view">
            <field name="name">sms.gateway.view.tree</field>
            <field name="model">sms.gateway</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" required="1"/>
                    <field name="base_url" required="1"/>
                    <field name="api_key"/>
                    <field name="secret_key"/>
                </tree>
            </field>
        </record>

        <record id="sms_gateway_action" model="ir.actions.act_window">
            <field name="name">SMS Gateway</field>
            <field name="res_model">sms.gateway</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Add SMS Gateway</p>
            </field>
        </record>


    </data>
</odoo>