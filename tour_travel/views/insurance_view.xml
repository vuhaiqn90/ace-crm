<?xml version="1.0" ?>

<odoo>
    <data>
		
<!--		<menuitem name="Insurance" id="menu_insurance" parent="menu_tour_travel" sequence="5"/>-->
		<menuitem name="Insurance" id="menu_insurance" sequence="3" web_icon="tour_travel,static/src/img/insurrance.png"/>
		
	<!--		
		========================================================================
					Insurance Type View
		========================================================================
-->

			<record id="insurance_type_form_view" model="ir.ui.view">
            <field name="name">insurance.type.form</field>
            <field name="model">insurance.type</field>
            <field name="type">form</field> 
            <field name="arch" type="xml">
           		<form string="Insurance Type">
           			<group colspan="4" col="6">
	            		<field name="name" />
						<field name="code" />
						<field name="adult_cost" />
						<field name="child_cost" />
					</group>
					</form>
				</field>
			</record>
			
			<record id="insurance_type_tree_view" model="ir.ui.view">
            <field name="name">insurance.type.tree</field>
            <field name="model">insurance.type</field>
            <field name="type">tree</field> 
            <field name="arch" type="xml">
           		<tree string="Insurance Type" editable="top">
           				<field name="name" />
						<field name="code" />
						<field name="adult_cost" />
						<field name="child_cost" />
				</tree>
				</field>
			</record>

		 <record model="ir.actions.act_window" id="action_insurance_type_tree_view">
			<field name="name">Insurance Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">insurance.type</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
	<menuitem name="Insurance Type" action="action_insurance_type_tree_view" sequence="1"
			id="menu_insurance_type"  parent="menu_insurance" />
	
	<!--		
		========================================================================
					Insurance Coverage Line View
		========================================================================
-->
	
	<record id="insurance_coverage_line_tree_view" model="ir.ui.view">
        <field name="name">insurance.coverage.line.tree</field>
        <field name="model">insurance.coverage.line</field>
        <field name="type">tree</field> 
        <field name="arch" type="xml">
       		<tree string="Insurance Coverage Line" editable="top">
     			<field name="product_id" />
     			<field name="name" invisible="1"/>
				<field name="benifit_cost" />
			</tree>
		</field>
	</record>
	
	<!--		
		========================================================================
					Insurance Policy View
		========================================================================
-->

			<record id="insurance_policy_form_view" model="ir.ui.view">
            <field name="name">insurance.policy.form</field>
            <field name="model">insurance.policy</field>
            <field name="type">form</field> 
            <field name="arch" type="xml">
           		<form string="Insurance Policy" version="7.0">
					   <header>
						<button string="Confirm" name="button_confirm" type="object" states="draft"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
					</header>
           			<group colspan="4" col="6">
	            		<field name="insurance_type_id" />
	            		<field name="name" />
						<field name="insurance_cost_for_adults" />
						<field name="insurance_cost_for_childs" />
				    </group>
					<separator colspan="6"/>
					<notebook colspan="4">
						<page string="Coverage Information">
            				<group col="7" colspan="3">
            					<field name="coverage_line_ids" nolabel="1"/>
            				</group>
            			</page>
					</notebook>
					</form>
				</field>
			</record>
			
			<record id="insurance_policy_tree_view" model="ir.ui.view">
            <field name="name">insurance.policy.tree</field>
            <field name="model">insurance.policy</field>
            <field name="type">tree</field> 
            <field name="arch" type="xml">
           		<tree string="Insurance Policy" >
           				<field name="insurance_type_id"/>
	            		<field name="name" />
						<field name="insurance_cost_for_adults" />
						<field name="insurance_cost_for_childs" />
						<field name="state"/>
				</tree>
				</field>
			</record>

		 <record model="ir.actions.act_window" id="action_insurance_policy_form_view">
			<field name="name">Insurance Policy</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">insurance.policy</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
	<menuitem name="Insurance Policy" action="action_insurance_policy_form_view" sequence="2"
			id="menu_insurance_policy"  parent="menu_insurance" />
	
			

    </data>
</odoo>
