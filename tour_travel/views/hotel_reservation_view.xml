	<menuitem name="Room Reservation"  sequence="5"	id="menu_room_reservation"  parent="menu_hotel" />	
		
		 
	 <!--
		=========================================================
       		 Hotel Room Reservation Form View 	
       	=========================================================
        -->
       	<record id="hotel_room_reservation_form_view" model="ir.ui.view">
            <field name="name">hotel.reservation.form</field>
            <field name="model">hotel.reservation</field>
            <field name="type">form</field> 
            <field name="arch" type="xml">
           		<form string="Hotel Room Reservation">
           			<group colspan="4" col="6">
	            		<field name="name" index="True"/>
						<field name="current_date" />
						<field name="customer_id" />
						<field name="email_id" />
						<field name="mobile" />
						<field name="adult" />
						<field name="child" />
					</group>
					<separator colspan="6" string="Hotel Information"/>
					<group colspan="4" col="6">
						<field name="hotel_type_id" />
						<field name="hotel_id" domain="[('hotel_type_id', '=', hotel_type_id),('state','=','confirm')]"/>
						<field name="checkin_date" />
						<field name="checkout_date" />		
					</group>
					<notebook colspan="6">
						<page string="Room Information">
            				<group col="7" colspan="3">
								<field name="room_line_ids" nolabel="1" context="{'parent_id':active_id}" />
            				</group>
            			</page>
            			<page string="Tax Information">
            				<group col="7" colspan="3">
								<field name="tax_id" nolabel="1"/>
            				</group>
            			</page>
            			<page string="History">
            				<group col="7" colspan="3">
								<field name="room_reserve_invoice_ids" nolabel="1"/>
            				</group>
            			</page>
					</notebook>
					<separator colspan="6" />
					<notebook colspan="6">
						<page string="Service Information">
            				<group col="7" colspan="3">
								<field name="service_line_ids" nolabel="1" context="{'parent_id':active_id}" />
            				</group>
            			</page>
					</notebook>
					<separator colspan="6" />
					<group col="7" colspan="3">
						<field name="untax_amt"/>
						<field name="tax_amt"/>
						<field name="total_amt"/>
					</group>
					<group col="7" colspan="3">
						<field name="state"/>
						<button string="Confirm" name="check_availability" states="draft" type="object" />
						<button string="Create Invoice" name="create_invoice" states="confirm" type="object"  />
						<button string="Checkout Detail" name="%(act_checkout_detail)d" states="checkout" type="action"  target="new"/>
						
            		</group>
				</form>
			</field>
		</record>

