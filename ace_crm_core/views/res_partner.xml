<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='view_res_partner_form_inherit' model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="replace"/>
            <field name="type" position="before">
                <field name="ref" string="Code" required="1"/>
            </field>
            <xpath expr="//field[@name='child_ids']//form//field[@name='name']" position="before">
                <field name="ref" string="Code"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']//kanban//div[hasclass('oe_kanban_details')]//field[@name='name']" position="after">
                <div><field name="ref"/></div>
            </xpath>
            <button name="toggle_active" position="before">
                <button class="oe_stat_button" type="object" name="open_live_chat" icon="fa-comments"
                        attrs="{'invisible': [('live_chat_count', '=', 0)]}">
                    <field string="Live Chat" name="live_chat_count" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>

    <record id='view_partner_tree_inherit' model="ir.ui.view">
        <field name="name">res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position="before">
                <field name="ref" string="Code"/>
                <field name="name"/>
            </field>
            <field name="display_name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
</odoo>