<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="products_request_cost" inherit_id="website_sale.product">
        <xpath expr="//t[@t-call='website_sale.product_price']" position="attributes">
            <attribute name="t-if">not product.request_quote</attribute>
        </xpath>
        <xpath expr="//p[@t-if='True']" position="attributes">
            <attribute name="t-if">True and not product.request_quote</attribute>
        </xpath>
        <xpath expr="//a[@id='add_to_cart']" position="attributes">
            <attribute name="t-if">not product.request_quote</attribute>
        </xpath>
        <xpath expr="//a[@id='add_to_cart']" position="before">
            <a t-if="product.request_quote" role="button" id="ace_request_form" class="btn btn-primary btn-lg mt8 js_check_product request_quote" t-att-href="'%s' % (product.request_url or '/get-quote')">Request for quote</a>
        </xpath>
        <xpath expr="//p[@t-else='']" position="replace">
            <p t-elif="not product.request_quote" class="alert alert-warning">This product has no valid combination.</p>
        </xpath>
    </template>

    <template id="product_quantity_request_quote" inherit_id="website_sale.product_quantity">
        <xpath expr="//div[hasclass('ks_quantity_panel')]" position="attributes">
            <attribute name="t-if">not product.request_quote</attribute>
        </xpath>
    </template>

    <template id="products_item_request_quote" inherit_id="ks_theme_kinetik.ks_change_b_tag">
        <xpath expr="//div[hasclass('ks-price')]" position="attributes">
            <attribute name="t-if">not product.request_quote</attribute>
        </xpath>
    </template>

    <template id="website_event.registration_attendee_details" name="Registration Attendee Details">
        <div role="dialog" id="modal_attendees_registration" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <form id="attendee_registration" t-attf-action="/event/#{slug(event)}/registration/confirm" method="post" class="js_website_submit_form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="modal-content">
                        <header class="modal-header">
                            <h4 class="modal-title" id="myModalLabel"><strong>Attendees</strong></h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">x</button>
                        </header>
                        <main class="modal-body">
                            <div class="container">
                                <t t-set="counter_type" t-value="1"/>
                                <t t-set="counter" t-value="0"/>
                                <t t-foreach="tickets" t-as="ticket">
                                    <h4 class="o_page_header mt16">
                                        <strong>
                                            Ticket Type #<t t-raw="counter_type"/>: <t t-esc="ticket['name']"/>
                                            <t t-if="ticket['price'] == 0">(Free)</t>
                                        </strong>
                                    </h4>
                                    <div class="row">
                                        <div class="col-lg-3"><strong>Full Name</strong></div>
                                        <div class="col-lg-3"><strong>Company Name</strong></div>
                                        <div class="col-lg-3"><strong>Email</strong></div>
                                        <div class="col-lg-3"><strong>Contact Number</strong> <span class="text-muted">(Optional)</span></div>
                                    </div>
                                    <t t-foreach="range(1, ticket['quantity'] + 1)" t-as="att_counter" name="attendee_loop">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <div class="row mb4">
                                            <t t-set="attendee_placeholder">Attendee #%s</t>
                                            <div class="col-lg-3"><input class='form-control' type='text' t-attf-name="#{counter}-name" required="This field is required" t-att-placeholder="attendee_placeholder %counter"/></div>
                                            <div class="col-lg-3"><input class='form-control' type='text' t-attf-name="#{counter}-companyname" required="This field is required"/></div>
                                            <div class="col-lg-3"><input class='form-control' type='email' t-attf-name="#{counter}-email" required="This field is required"/></div>
                                            <div class="col-lg-3"><input class='form-control' type='tel' t-attf-name="#{counter}-phone" required="This field is required"/></div>
                                            <input class='d-none' type='text' t-attf-name="#{counter}-ticket_id" t-attf-value="#{ticket['id']}"/>
                                        </div>
                                    </t>
                                    <t t-set="counter_type" t-value="counter_type + 1"/>
                                </t>
                            </div>
                        </main>
                        <footer class="modal-footer">
                            <div class="float-left">
                                <button type="submit" class="btn btn-primary">Continue</button>
                                <button type="button" class="btn btn-secondary js_goto_event" data-dismiss="modal">Cancel Registration</button>
                            </div>
                        </footer>
                    </div>
                </form>
            </div>
        </div>
    </template>
</odoo>