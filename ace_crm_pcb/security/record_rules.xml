<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.rule" id="crm_lead_rule_for_lc">
            <field name="name">PCB LC User - CRM</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('user_id','=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4, ref('group_pcb_lc'))]"/>
        </record>

        <record model="ir.rule" id="sale_order_rule_for_lc">
            <field name="name">PCB LC User - Sale Order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('user_id','=', user.id)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="groups" eval="[(4, ref('group_pcb_lc'))]"/>
        </record>
    </data>
</odoo>